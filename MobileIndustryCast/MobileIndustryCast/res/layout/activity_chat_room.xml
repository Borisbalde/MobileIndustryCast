<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoom" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true" >

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_marginRight="50dp"
            android:layout_weight="0.29"
            android:gravity="left|center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/search_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/search_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_posts"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_posts"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/toggle_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buyer_toggle"
                        android:textOff="@string/buyer_toggle"
                        android:textOn="@string/buyer_toggle" />

                    <ToggleButton
                        android:id="@+id/toggle_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_toggle"
                        android:textOff="@string/seller_toggle"
                        android:textOn="@string/seller_toggle" />

                    <ToggleButton
                        android:id="@+id/toggle_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_toggle"
                        android:textOff="@string/trade_toggle"
                        android:textOn="@string/trade_toggle" />

                    <ToggleButton
                        android:id="@+id/toggle_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_toggle"
                        android:textOff="@string/info_toggle"
                        android:textOn="@string/info_toggle" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saved_alerts"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:id="@+id/label_post" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/new_post" android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText android:id="@+id/post_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:hint="@string/post_text_hint">
                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/post_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/post_button"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/broadcast_btn"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Broadcast" />

                </LinearLayout>

            </LinearLayout>

            

        </LinearLayout>

        <ListView
            android:id="@+id/messagesListView"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.22" >

        </ListView>

    </LinearLayout>

</RelativeLayout>